{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "nameKVault": {
            "type": "string"
        },
        "secretName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "secretValue": {
            "type": "securestring"
            
        }, 
        "location": {
            "type": "string",
           "defaultValue": "[resourceGroup().location]"
        },
        "objectId": {
            "type": "string",
            "defaultValue": "0b42b4d3-47cf-4fbb-9bca-2756741d1f58"
        },
        "keyPermissions": {
            "type": "array",
          "defaultValue": ["all"]
        },
        "secretsPermissions": {
            "type": "array",
            "defaultValue":["all"]
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('nameKVault')]",
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2016-10-01",
            "location": "[parameters('location')]",
           
            "properties": {
                "enabledForDeployment": true,
                "enabledForTemplateDeployment": true,
                "enabledForDiskEncryption": true,
                "enableSoftDelete": true,
                "enablePurgeProtection": true,
                               
                "tenantId": "[subscription().tenantId]",
                "sku": {
                    "name": "standard",
                    "family": "A"
                },
                "accessPolicies": [
                    {
                        "objectId": "[parameters('objectId')]",
                        "tenantId": "[subscription().tenantId]",
                        "permissions": {
                            "keys": "[parameters('keyPermissions')]",
                            "secrets": "[parameters('secretsPermissions')]"
                        }
                    }
                ]
            }, 
            "resources": [
                {
                    "name": "[concat(parameters('nameKVault'),'/', parameters('secretName'))]",
                    "type": "Microsoft.KeyVault/vaults/secrets",
                    "apiVersion": "2016-10-01",
                    "location": "[parameters('location')]",
                     "dependsOn": [
                         "[resourceId('Microsoft.KeyVault/vaults', parameters('nameKVault'))]"],
                         "properties": {
                         "value": "[parameters('secretValue')]"
                            }
                    }
            ]
            
          
        },
        {
        "name": "lockresource",
        "type": "Microsoft.Authorization/locks",
        "apiVersion": "2016-09-01",
        
        "properties": {
            "level": "CanNotDelete",
            "notes": "This resource can't be deleted by you"
        }
        }
    ],
    "outputs": {}
}